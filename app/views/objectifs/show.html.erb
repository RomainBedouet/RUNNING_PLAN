<%= link_to "Retour à la liste des objectifs", objectifs_path, class: "btn btn-primary mt-3" %>

<div class="container py-5">
  <div class="card p-4 shadow" style="background-color: white;">
    <h1 class="mb-4 text-center">Mon objectif : <%= @objectif.name %></h1>

    <%= form_with model: @objectif do |f| %>
      <div class="mb-3">
        <%= f.label :km, "Précisez le nombre de kilomètres pour atteindre votre objectif", class: "form-label" %>
        <%= f.number_field :km, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :actual_time, "Temps actuel pour parcourir la distance (min)", class: "form-label" %>
        <%= f.number_field :actual_time, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :goal_time, "Temps visé pour la prochaine course (min)", class: "form-label" %>
        <%= f.number_field :goal_time, class: "form-control" %>
      </div>

      <%= f.submit "Enregistrer mon objectif", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<h1>Modifier mon profil</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
  <div><%= f.label :age %><%= f.number_field :age %></div>

  <div><%= f.label :weight, "Poids (kg)" %><%= f.number_field :weight %></div>

  <div><%= f.label :height, "Taille (cm)" %><%= f.number_field :height %></div>

  <div>
    <%= f.label :level_running, "Niveau" %>
    <%= f.select :level_running, options_for_select([["Débutant", "débutant"], ["Intermédiaire", "intermediaire"], ["Avancé", "avance"]], @user.level_running) %>
  </div>

  <%= f.submit "Mettre à jour", class: "btn btn-success" %>
<% end %>
