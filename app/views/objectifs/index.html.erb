<div class="container py-5">
  <div class="card p-4 shadow" style="background-color: white;">
    <h1 class="mb-4 text-center">Liste des objectifs</h1>

    <ul class="list-group list-group-flush">
      <% @objectifs.each do |objectif| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= objectif.name %>
          <%= link_to "Je choisis cet objectif", objectif_path(objectif), class: "btn btn-primary btn-sm" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
