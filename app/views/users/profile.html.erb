<div class="container mt-5">
  <div class="glass-card mx-auto w-75 p-4">
    <h1 class="text-center mb-4">Mes informations</h1>

    <!-- PROFIL + OBJECTIF CÔTE À CÔTE -->
    <div class="d-flex justify-content-between gap-4">
      <!-- COLONNE PROFIL -->
      <div class="flex-fill p-3 border rounded-4 bg-white bg-opacity-75">
        <h2 class="mb-3 text-center">Mon profil</h2>

        <p><strong>Âge :</strong> <%= @user.age %> ans</p>
        <p><strong>Poids :</strong> <%= @user.weight %> kg</p>
        <p><strong>Taille :</strong> <%= @user.height %> cm</p>
        <p><strong>Niveau :</strong> <%= @user.level_running %></p>
      </div>

      <!-- COLONNE OBJECTIF -->
      <div class="flex-fill p-3 border rounded-4 bg-white bg-opacity-75">
        <h2 class="mb-3 text-center">Mon objectif</h2>

        <% if @objectif.present? %>
          <p><strong><%= @objectif.name %></strong></p>
          <p><strong>Kilomètres :</strong> <%= @objectif.km %></p>
          <p>
            <strong>Temps actuel :</strong> <%= @objectif.actual_time %> min
          </p>
          <p><strong>Temps visé :</strong> <%= @objectif.goal_time %> min</p>
          <div class="mt-3 d-flex justify-content-center gap-2">
            <%= link_to "Modifier", objectif_path(@objectif), class: "btn btn-primary btn-sm" %>

            <%= link_to "Supprimer", objectif_path(@objectif),
                method: :delete,
                data: { confirm: "Supprimer cet objectif ?" },
                class: "btn btn-primary btn-sm" %>
          </div>
        <% else %>
          <p>Aucun objectif sélectionné.</p>
          <%= link_to "Créer un objectif", new_objectif_path, class: "btn btn-primary btn-sm mt-2" %>
        <% end %>
      </div>
    </div>

    <hr class="my-4">

    <div class="text-center">
      <%= link_to "Discuter avec l'IA", running_chat_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
